<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MenuOption" TargetType="{x:Type Menu}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="Background" Value="#404040"/><!--Color #404040 -->
        <Setter Property="Foreground" Value="#f2f2f2"/><!--Color "#f2f2f2"-->
    </Style>

    <Style x:Key="MenuItemHeaderOption" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="#404040"/><!--Color #404040 -->
        <Setter Property="Foreground" Value="#f2f2f2"/><!--Color "#f2f2f2"-->
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="BorderBrush" Value="#4d4d4d"/><!--Color "#4d4d4d" -->
    </Style>

    <Style x:Key="MenuItemParagraphOption" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="#404040"/><!--Color #404040 -->
        <Setter Property="Foreground" Value="#f2f2f2"/><!--Color "#f2f2f2"-->
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderBrush" Value="#4d4d4d"/><!--Color "#4d4d4d" -->
    </Style>


    
</ResourceDictionary>