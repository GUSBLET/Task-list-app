<Window x:Class="Task_list_app.WindowDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_list_app"
        mc:Ignorable="d"
        Title="Description" Height="300" Width="700" MinHeight="300" MinWidth="700">
    <Grid>
        <Canvas Style="{StaticResource WorkZoneBackground}">
            <StackPanel>
                <DockPanel Style="{StaticResource MarginDockPanel}">
                    <Label Content="Name list:"/>
                    <Label x:Name="Label_NameList"
                           Content="..."/>
                </DockPanel>

                <DockPanel Style="{StaticResource MarginDockPanel}">
                    <Label Content="Path to list:"/>
                    <Label x:Name="Label_PathToList"
                           Content="..."/>
                </DockPanel>

                <DockPanel Style="{StaticResource MarginDockPanel}">
                    <Label Content="Desctiption:"/>
                    <Label x:Name="Label_Description"
                           Content="..."/>
                </DockPanel>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
